<TournamentFight>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 0, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint_y: None
    height: 700

    Label:
        text: "Choose a winner"
        size_hint_y: None
        height: 100
        font_size: 40
        padding: [40, 0, 0, 0]

    BoxLayout:
        orientation: 'horizontal'
        padding: 40
        id: fight_content


<ChoosableWrestler>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos

    size_hint_x: None
    width: 400

    AsyncImage:
        id: image
        size_hint: None, None
        size: 400, 400

    Label:
        id: wrestler_name
        text: 'Default text'
        size_hint_y: None
        height: 80

    PrettyButton:
        id: choose_button
        text: "Design a winner"
        size_hint_x: 1


<NextFightPreview>:
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 0.5, 0, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint_y: None
    height: 50

    Label:
        id: label
        text: "Default text"
        markup: True
