<MainScreen>:
    orientation: 'horizontal'
    padding: 40
    spacing: 40
    canvas.before:
        Color:
            rgba: 0.925, 0.925, 0.925, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Menu:
        id: menu
    Content:
        id: content

<Menu>:
    orientation: 'vertical'
    size_hint_x: 0.3
    MenuItem:
        text1: 'Quick Start'
        text2: 'Instructions on how to quickly start using the app.'
    MenuItem:
        text1: 'Load CSV file'
        text2: 'Upload a CSV file containing participant data.'
    MenuItem:
        text1: 'Show participants'
        text2: 'View the list of all registered participants.'
    MenuItem:
        text1: 'Bracket'
        text2: 'Generate or display the tournament bracket.'

    Label:

<MenuItem>:
    orientation: 'vertical'
    size_hint_y: None
    height: 120
    padding: 20
    spacing: 15
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 0.87, 0.87, 0.87, 1
        Line:
            width: 0.5
            rectangle: self.x, self.y, self.width, self.height
    Label:
        id: label1
        text: root.text1
        font_size: 20
        color: 0.1294, 0.1294, 0.1294, 1
        text_size: self.width, None
        halign: 'left'
        size_hint_y: None
        height: self.texture_size[1]

    Label:
        id: label2
        text: root.text2
        font_size: 16
        color: 0.1294, 0.1294, 0.1294, 1
        text_size: self.width, None
        halign: 'left'
        size_hint_y: None
        height: self.texture_size[1]

<Content>:
    size_hint_x: 0.7

    canvas.before:
        Color:
            rgba: 0.2, 0.4, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: content_box
        orientation: 'vertical'

<QuickStart>:
    canvas.before:
        Color:
            rgba: 0.5, 0.2, 0.1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'vertical'
    padding: 20

    Label:
        text: 'Quick Start'
        font_size: 30
        color: 1, 1, 1, 1
        size_hint_y: None
        height: 50
        text_size: self.width, None
        halign: 'left'

    Label:
        text: 'Welcome to the Sumo Tournament Manager app'
        text_size: self.width, None
        halign: 'left'

    Label:
        text: 'To get started, follow these steps:'
        text_size: self.width, None
        halign: 'left'


    Label:
        text: '1. Load a CSV file with participant data'
        text_size: self.width, None
        halign: 'left'

    Label:
        text: '2. Weight participants and make adjustments if necessary'
        text_size: self.width, None
        halign: 'left'

    Label:
        text: '3. Select tournament participants'
        text_size: self.width, None
        halign: 'left'

    Label:
        text: '4. Generate the tournament bracket with chosen participants'
        text_size: self.width, None
        halign: 'left'

    Label:
        text: '5. Commence the tournament'
        text_size: self.width, None
        halign: 'left'

    Label:
        text: '6. Continuously update the bracket as the tournament progresses'
        text_size: self.width, None
        halign: 'left'

    Label:
        text: 'We wish you a successful tournament!'
        text_size: self.width, None
        halign: 'left'

<LoadCSV>:
    canvas.before:
        Color:
            rgba: 0.1, 0.2, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos

<ShowParticipants>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

<ProfileButton>:
    text: '>'
    background_color: 0, 0, 1, 0
    color: 0, 0, 1, 0.5
    size_hint: 1, None
    height: 10
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0.5

<WrestlerInfo>:
    text: "Default text"
    color: 0.13, 0.13, 0.13, 1
    halign: 'left'
    valign: 'center'
    text_size: self.size
    size_hint_y: None
    height: self.font_size + 3

<PrettyButton>:
    font_size: 20
    padding: 15, 8

    background_normal: ''
    background_color: 0.85, 0.85, 0.85, 1
    color: 0.3, 0.3, 0.3, 1

#    text_size: self.width, None
    size_hint_y: None
    size_hint_x: None
    size: self.texture_size

<WrestlerProfile>:
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    AnchorLayout:
        padding: 40
        BoxLayout:
            spacing: 20
            orientation: 'vertical'

            WrestlerInfo:
                text: "[b]Participant's profile[/b]"
                markup: True
                font_size: 30
            WrestlerInfo:
                id: name_surname
            WrestlerInfo:
                id: age_category
            WrestlerInfo:
                id: date_of_birth
            WrestlerInfo:
                id: weight_category
            WrestlerInfo:
                id: weight
            WrestlerInfo:
                id: country
            StackLayout:
                spacing: 15
                PrettyButton:
                    text: "Add to tournament"
                    id: btn_add_to_tournament
                PrettyButton:
                    id: btn_edit_profile
                    text: "Edit"
    AnchorLayout:
        padding: 40
        anchor_x: 'right'
        anchor_y: 'top'

        AsyncImage:
            id: image
            size_hint: None, None
            size: 250, 250


<Bracket>:
    canvas.before:
        Color:
            rgba: 0.9, 0.5, 0.1, 1
        Rectangle:
            size: self.size
            pos: self.pos

<TextInput>:
    size_hint_y: None
    height: 35

<Button>:
    size_hint_y: None
    height: 40
